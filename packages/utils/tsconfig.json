{
  "compilerOptions": {
    "lib": [
      "es2020", "dom"
    ],
    "typeRoots": ["./types", "node_modules/@types"],
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2020",
    "moduleResolution": "node",
    "sourceMap": false,
    "noImplicitAny": true,
    "composite": true,
    "declaration": true,
    "removeComments": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src"
  },
}
